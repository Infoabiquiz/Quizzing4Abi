<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/main_menu_logo"
        android:layout_gravity="right"
        android:layout_weight="0.18"
        android:background="@mipmap/ic_launcher"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/main_menu_settings"
        android:layout_alignEnd="@+id/main_menu_settings"
        android:layout_marginTop="44dp"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/main_menu_play"
        android:layout_marginTop="115dp"
        android:layout_marginLeft="110dp"
        android:layout_below="@+id/main_menu_logo"
        android:layout_alignParentLeft="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/main_menu_scoreboard"
        android:layout_alignBottom="@+id/main_menu_play"
        android:layout_toLeftOf="@+id/main_menu_logo"
        android:layout_toStartOf="@+id/main_menu_logo"
        android:layout_marginBottom="48dp"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/main_menu_statistics"
        android:layout_marginTop="58dp"
        android:layout_below="@+id/main_menu_scoreboard"
        android:layout_alignLeft="@+id/main_menu_play" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/main_menu_settings"
        android:background="@drawable/gearwheel"
        android:layout_alignTop="@+id/main_menu_statistics"
        android:layout_toRightOf="@+id/main_menu_statistics"
        android:layout_toEndOf="@+id/main_menu_statistics"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/main_menu_speaker"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/main_menu_statistics"
        android:layout_marginBottom="26dp" />

</RelativeLayout>
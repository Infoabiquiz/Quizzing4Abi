<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:id="@+id/main_menu_relative_layout">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/main_menu_logo"
        android:layout_gravity="right"
        android:layout_weight="0.18"
        android:background="@drawable/logo"
        android:layout_above="@+id/main_menu_play"
        android:layout_toLeftOf="@+id/main_menu_settings"
        android:layout_toRightOf="@+id/main_menu_speaker"
        android:layout_toEndOf="@+id/main_menu_speaker" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/main_menu_scoreboard"
        android:background="@drawable/podium"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/main_menu_statistics"
        android:focusable="true"
        android:background="@drawable/statistics"
        android:layout_above="@+id/main_menu_scoreboard"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/main_menu_settings"
        android:background="@drawable/gearwheel"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/main_menu_speaker"
        android:background="@drawable/speaker"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/main_menu_play"
        android:background="@drawable/play"
        android:layout_above="@+id/main_menu_statistics"
        android:layout_alignRight="@+id/main_menu_scoreboard"
        android:layout_alignEnd="@+id/main_menu_scoreboard" />

</RelativeLayout>
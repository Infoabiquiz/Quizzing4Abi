<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:id="@+id/main_menu_relative_layout"
    >

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/main_menu_play"
        android:background="@drawable/playlogo"
        android:onClick="onClick"
        android:layout_above="@+id/main_menu_statistics"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="88dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/main_menu_scoreboard"
        android:background="@drawable/podium"
        android:onClick="onClick"
        android:layout_alignBottom="@+id/main_menu_statistics"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:id="@+id/main_menu_statistics"
        android:background="@drawable/statistics"
        android:onClick="onClick"
        android:layout_alignTop="@+id/main_menu_settings"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/main_menu_settings"
        android:background="@drawable/gearwheel"
        android:onClick="onClick"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="77dp" />
</RelativeLayout>
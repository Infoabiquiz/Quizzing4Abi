<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Hintergrundfarbe"
        android:id="@+id/settings_text_backgroundcolor"
        android:layout_marginTop="33dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/settings_pickcolor_brown"
        android:layout_alignTop="@+id/settings_pickcolor_purple"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#ff8b4513" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/settings_pickcolor_cyan"
        android:background="#ff59dbff"
        android:layout_alignTop="@+id/settings_pickcolor_purple"
        android:layout_toRightOf="@+id/settings_pickcolor_brown"
        android:layout_toEndOf="@+id/settings_pickcolor_brown" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/settings_pickcolor_purple"
        android:layout_below="@+id/settings_text_backgroundcolor"
        android:layout_toRightOf="@+id/settings_pickcolor_cyan"
        android:layout_toEndOf="@+id/settings_pickcolor_cyan"
        android:background="#ffd920ff" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/settings_pickcolor_orange"
        android:layout_alignTop="@+id/settings_pickcolor_purple"
        android:layout_toRightOf="@+id/settings_pickcolor_purple"
        android:layout_toEndOf="@+id/settings_pickcolor_purple"
        android:background="#ffffb71e" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/settings_pickcolor_blue"
        android:layout_below="@+id/settings_text_backgroundcolor"
        android:layout_toRightOf="@+id/settings_pickcolor_orange"
        android:layout_toEndOf="@+id/settings_pickcolor_orange"
        android:background="#ff701cff" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/settings_pickcolor_default"
        android:layout_alignTop="@+id/settings_pickcolor_blue"
        android:layout_toRightOf="@+id/settings_pickcolor_blue"
        android:layout_toEndOf="@+id/settings_pickcolor_blue"
        android:background="#ffeeeeee" />

</RelativeLayout>
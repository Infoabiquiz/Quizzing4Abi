<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/settings_relative_layout"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Hintergrundfarbe"
        android:id="@+id/settings_text_backgroundcolor"
        android:layout_marginTop="33dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="onClick" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/settings_pickcolor_yellow"
        android:background="#ff8b4513"
        android:layout_below="@+id/settings_text_backgroundcolor"
        android:layout_toRightOf="@+id/settings_pickcolor_white"
        android:layout_toEndOf="@+id/settings_pickcolor_white"
        android:onClick="onClick"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/settings_pickcolor_cyan"
        android:background="#ff80f3ff"
        android:layout_below="@+id/settings_text_backgroundcolor"
        android:layout_toRightOf="@+id/settings_pickcolor_yellow"
        android:layout_toEndOf="@+id/settings_pickcolor_yellow"
        android:onClick="onClick"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/settings_pickcolor_green"
        android:layout_below="@+id/settings_text_backgroundcolor"
        android:layout_toRightOf="@+id/settings_pickcolor_cyan"
        android:layout_toEndOf="@+id/settings_pickcolor_cyan"
        android:background="@android:color/holo_purple"
        android:onClick="onClick"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/settings_pickcolor_red"
        android:background="@android:color/holo_orange_light"
        android:layout_alignTop="@+id/settings_pickcolor_green"
        android:layout_toRightOf="@+id/settings_pickcolor_green"
        android:layout_toEndOf="@+id/settings_pickcolor_green"
        android:onClick="onClick"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/settings_pickcolor_blue"
        android:layout_below="@+id/settings_text_backgroundcolor"
        android:layout_toRightOf="@+id/settings_pickcolor_orange"
        android:background="@android:color/holo_blue_dark"
        android:nestedScrollingEnabled="false"
        android:onClick="onClick"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/settings_pickcolor_white"
        android:layout_alignTop="@+id/settings_pickcolor_blue"
        android:layout_toRightOf="@+id/settings_pickcolor_blue"
        android:layout_toEndOf="@+id/settings_pickcolor_blue"
        android:background="@android:color/white"
        android:onClick="onClick"/>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/settings_menu"
        android:background="@drawable/logo"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="onClick"/>

</RelativeLayout>
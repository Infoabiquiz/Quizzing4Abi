<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scoreboard_podium"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="46dp"
        android:background="@drawable/podium"
        android:onClick="onClick" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scoreboard_icon_1"
        android:background="@drawable/first_place"
        android:layout_marginTop="52dp"
        android:layout_below="@+id/scoreboard_podium"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="onClick" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scoreboard_icon_2"
        android:background="@drawable/second_place"
        android:layout_below="@+id/scoreboard_icon_1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="onClick" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scoreboard_icon_3"
        android:background="@drawable/third_place"
        android:layout_below="@+id/scoreboard_icon_2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="onClick" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Placeholder FIRST"
        android:id="@+id/scoreboard_first"
        android:layout_alignTop="@+id/scoreboard_icon_1"
        android:layout_toRightOf="@+id/scoreboard_icon_1"
        android:layout_toEndOf="@+id/scoreboard_icon_1"
        android:onClick="onClick" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Placeholder SECOND"
        android:id="@+id/scoreboard_second"
        android:layout_below="@+id/scoreboard_icon_1"
        android:layout_toRightOf="@+id/scoreboard_icon_1"
        android:layout_toEndOf="@+id/scoreboard_icon_1"
        android:onClick="onClick" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Placeholder THIRD"
        android:id="@+id/scoreboard_third"
        android:layout_below="@+id/scoreboard_icon_2"
        android:layout_toRightOf="@+id/scoreboard_icon_2"
        android:layout_toEndOf="@+id/scoreboard_icon_2"
        android:onClick="onClick" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/scoreboard_menu"
        android:background="@drawable/logo"
        android:layout_alignBottom="@+id/scoreboard_podium"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="onClick"/>

</RelativeLayout>